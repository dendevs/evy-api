<h1>Listing Evenements</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
 
  <% @evenements.each do |evenement| %>
    <tr>
      <td><%= evenement.title %></td>
      <td><%= evenement.description %></td>
      <td><%= link_to 'Show', evenement_path(evenement) %></td>
      <td><%= link_to 'Edit', edit_evenement_path(evenement) %></td>
      <td><%= link_to 'Destroy', evenement_path(evenement),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New evenement', new_evenement_path %>
